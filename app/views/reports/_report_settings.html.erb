<div class='panel panel-default'>
  <div class='panel-heading'>Report Information</div>
  <div class='panel-body'>
    <div class='form-horizontal'>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='name' class='control-label'>Report Name</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <input type='text' name='name' id='name' ng-model='report.name' placeholder='Name this report' class='form-control' required />
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='report_status' class='control-label'>Status</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <select id='report_status' class='full-width-select'
            ng-model='report.status'
            ng-options='st.value as st.name for st in report.status_types'>
          </select>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='report_type' class='control-label'>Report Type</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <select id='report_type' class='full-width-select'
            ng-model='report.report_type'
            ng-options='rt.value as rt.name for rt in report.report_types'>
          </select>
        </div>
      </div>
      <div class='row' ng-show="report.report_type == 'report'" >
        <div class='col-lg-12'>
          <label for='report_template_id' class='control-label'>Report Template</label>
        </div>
      </div>
      <div class='row' ng-show="report.report_type == 'report'" >
        <div class='col-lg-12'>
          <select id='report_template_id' class='full-width-select'
            ng-model='report.report_template_id'
            ng-options='rt.id as rt.name for rt in reportTemplates'
            ng-change='updateSelectedReportTemplate()'>
            <option value=''>No template</option>
          </select>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label class='control-label' for='tags'>Tags</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <input id='tags' class='full-width' type='text' ng-model='report.tags' bs-tags-input bs-tags-typeahead='queryTags'  />
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='description' class='control-label'>Description</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <textarea id='description' name='description' ng-model='report.description' placeholder='Description' class='form-control' rows='6'></textarea>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12 spacer5'>
          <button ng-disabled='report_form.$invalid' ng-click='save()' class='btn btn-success form-control' title='Save this report'>Save</button>
        </div>
      </div>
    </div>
  </div>
</div>