<div class='panel panel-default'>
  <div class='panel-heading'>Report Information</div>
  <div class='panel-body'>
    <div class='form-horizontal'>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='name' class='control-label'>Report Name</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <input type='text' name='name' id='name' ng-model='report.name' placeholder='Name this report' class='form-control' required />
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='report_template_id' class='control-label'>Report Template</label>
        </div>
      </div>
      <div class='row'>
          <select ui-select2='uiSelect2Options'
            data-placeholder='Use a template if you want a head start'
            ng-model='report.report_template_id'
            ng-disabled='dataLoading'
            ng-change='updateSelectedReportTemplate()'>
            <option></option>
            <option ng-repeat='rt in reportTemplates' value='{{ rt.id }}'>{{ rt.name }}</option>
          </select>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label class='control-label'>Tags</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <input class='full-width' type='text' ng-model='report.tags' bs-tags-input bs-tags-typeahead='queryTags'  />
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='description' class='control-label'>Description</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <textarea id='description' name='description' ng-model='report.description' placeholder='Description' class='form-control' rows='6'></textarea>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12 spacer5'>
          <button ng-disabled='report_form.$invalid' ng-click='save()' class='btn btn-success form-control' title='Save this report'>Save</button>
        </div>
      </div>
    </div>
  </div>
</div>