<div class='panel panel-default'>
  <div class='panel-heading'>Report Information</div>
  <div class='panel-body'>
    <div class='form-horizontal'>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='name' class='control-label'>Report Name</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <input type='text' name='name' id='name' ng-model='report.name' placeholder='Name this report' class='form-control' required />
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <label for='description' class='control-label'>Description</label>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12'>
          <textarea id='description' name='description' ng-model='report.description' placeholder='Description' class='form-control' rows='6'></textarea>
        </div>
      </div>
      <div class='row'>
        <div class='col-lg-12 spacer5'>
          <button ng-disabled='report_form.$invalid' ng-click='save()' class='btn btn-success form-control' title='Save this report'>Save</button>
        </div>
      </div>
    </div>
  </div>
</div>