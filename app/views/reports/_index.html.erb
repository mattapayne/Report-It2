<div ng-controller='ReportsController'>
<div class='panel panel-default'>
  <div class='panel-heading'>
    Reports
  </div>
  <div class='panel-body'>
    <div ng-class='resultClasses()' ng-show='hasResult()'>
      <button class="close" ng-click='resetResult()'>Ã—</button>
      <ul>
        <li ng-repeat='message in getMessages()'>{{ message }}</li>
      </ul>
    </div>
    <div id='report-tags'>
     <%= render partial: "user_tags/index", locals: {tagType: 'report'} %>
     </div>
      <ul class='list-group'>
        <li ng-hide='reports.length > 0' class='list-group-item'>Please select one or more tags to filter your reports.</li>
        <li ng-repeat='report in reports | orderBy:name:false' class='list-group-item'>
          <span>{{ report.name }} ({{ report.shared ? "Shared with you by " + report.shared_by : "You created" }})</span>
          <div class='pull-right'>
            <div class='btn-group'>
              <button type="button" data-toggle='dropdown' class='btn btn-default dropdown-toggle'>Export
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li>
                  <%= link_to('Export to Word', export_path(:report, :doc) + '/{{ report.id }}')%>
                </li>
                <li>
                  <%= link_to('Export to PDF', export_path(:report, :pdf) + '/{{ report.id }}') %>
                </li>
              </ul>
            </div>
            <button type='button' title='Share this report' ng-disabled='deleting($index) || isShared($index)' class='btn btn-default' ng-click='share($index)'>Share</button>
            <button type='button' title='Edit this report' ng-disabled='deleting($index)' class='btn btn-default' ng-click='edit($index)'>Edit</button>
            <button type='button' ng-click='destroy($index)' ng-disabled='deleting($index) || isShared($index)' title='Delete this report' class='btn btn-danger'>Delete</button>
          </div>
          <div class='clearfix'></div>
          <div ng-show='displaySharing($index)' class='spacer5'>
            <div class='panel panel-default'>
              <div class='panel-heading'>
                Sharing
                <button type="button" class="close" aria-hidden="true" ng-click='hideSharing($index)', title='Cancel editing'>&times;</button>
              </div>
              <div class='panel-body'>
                <div ng-hide='hasShares($index)'>You are not associated with anyone yet, so you can't share this report.</div>
                <div ng-show='hasShares($index)' class='row'>
                  <div ng-repeat='share in getShares($index)' class='col-md-2'>
                    <img ng-click='onClickShare(report, share)' ng-src='{{ share.gravatar_url}}'
                         alt='{{share.full_name}}' title='{{ getShareTitle(share) }}'
                         ng-class="share.has_share ? 'shared' : 'not-shared'" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
      <button type='button' title='Create a new report' ng-click='add()' class='btn btn-success pull-right'>Add</button>
  </div>
</div>
</div>