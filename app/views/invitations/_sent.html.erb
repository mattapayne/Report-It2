<div ng-controller='SentInvitationsController'>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      Invitations Sent
    </div>
    <div class='panel-body'>
      <div ng-class='resultClasses()' ng-if='hasResult()'>
        <button class="close" ng-click='resetResult()'>Ã—</button>
        <ul>
          <li ng-repeat='message in getMessages()'>{{ message }}</li>
        </ul>
      </div>
      <ul class='list-group'>
        <li ng-if='invitations.length == 0' class='list-group-item'>You haven't sent any invitations yet.</li>
        <li ng-repeat="invite in invitations | orderBy:'date_created'" class='list-group-item'>
          <span>Sent to: {{ invite.to_name }} ({{ invite.to_email }}) on {{ invite.created_at }}</span>
          <span>Status: {{ invite.status }}</span>
          <div class='pull-right'>
            <div class='btn-group'>
              <button type="button" data-toggle='dropdown' class='btn btn-default dropdown-toggle'>Actions
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><a href='' title='Delete this invitation' ng-click='deleteSentInvitation(invite)'>Delete</a></li>
              </ul>
            </div>
          </div>
          <div class='clearfix'></div>
        </li>
		<%= render partial: "shared/pagination" %>
      </ul>
    </div>
  </div>
</div>